.pi_creature{width:var(--size);height:var(--size);max-width:100%;margin:0 auto}.pi_creature[data-text=false]{--size:150px}.pi_creature[data-text=false][data-style=big]{--size:200px}.pi_creature[data-text=true]{--size:250px}.pi_creature[data-text=true][data-style=big]{--size:300px}.pi_creature .pi_creature_frame{position:relative;width:100%;height:100%;max-width:100%}.pi_creature .pi_creature_frame>*{position:absolute;width:100%;height:100%}.pi_creature .pi_creature_frame .pi_creature_text{display:flex;justify-content:center;align-items:center;color:#000}.pi_creature .pi_creature_frame svg{overflow:visible}.pi_creature[data-text=true] .pi_creature_frame>*{width:50%;height:50%}.pi_creature[data-flip=false]{left:calc(-1 * var(--size) - 20px)}.pi_creature[data-flip=false] .pi_creature_frame>*:first-child{left:0;bottom:0}.pi_creature[data-flip=false] .pi_creature_frame>*:not(:first-child){right:0;top:0}.pi_creature[data-flip=true]{right:calc(-1 * var(--size) - 20px)}.pi_creature[data-flip=true] svg{transform:scaleX(-1)}.pi_creature[data-flip=true] .pi_creature_frame>*:first-child{right:0;bottom:0}.pi_creature[data-flip=true] .pi_creature_frame>*:not(:first-child){left:0;top:0}.pi_creature[data-placement=side]{position:absolute}.pi_creature[data-placement=side] .pi_creature_frame{transform:translateY(-100%)}@media(max-width:1680px){.pi_creature[data-placement=side]{display:none}}@media(min-width:1680px){.pi_creature[data-placement=auto]{position:absolute}.pi_creature[data-placement=auto] .pi_creature_frame{transform:translateY(-100%)}}@media(max-width:1680px){.pi_creature[data-placement=auto]{position:static}}