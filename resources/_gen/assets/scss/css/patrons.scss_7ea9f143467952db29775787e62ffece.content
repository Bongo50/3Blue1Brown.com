.patrons{display:grid;grid-gap:5px 10px;grid-template-columns:1fr 1fr 1fr 1fr;padding:20px;text-align:left}.patrons[data-open=false]{max-height:300px;mask-image:linear-gradient(black 75%,transparent 100%);-webkit-mask-image:linear-gradient(black 75%,transparent 100%)}.patrons span{overflow:hidden;text-overflow:ellipsis;white-space:nowrap}@media(max-width:900px){.patrons{grid-template-columns:1fr 1fr 1fr}}@media(max-width:600px){.patrons{grid-template-columns:1fr 1fr}}@media(max-width:300px){.patrons{grid-template-columns:1fr}}