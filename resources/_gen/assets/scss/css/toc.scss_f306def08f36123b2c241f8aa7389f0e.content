.toc{position:fixed;display:flex;flex-direction:column;left:0;top:0;bottom:0;width:300px;max-width:calc(100vw - 60px);font-family:poppins,sans-serif;background:#fff;box-shadow:0 0 10px #00000020;z-index:10;transition:transform .2s ease,opacity .2s ease}.toc[data-open=false]{transform:translateX(-100%);box-shadow:none}.toc .toc_heading{display:flex;position:relative;align-items:center;margin-bottom:10px}.toc .toc_heading>span{flex-grow:1;margin-left:20px}.toc .toc_heading .toc_close{margin:0;background:0 0}.toc .toc_heading .toc_close:hover{background:#b3e5fc}.toc .toc_heading .toc_open{position:absolute;left:100%;margin:0;background:#eee}.toc .toc_heading .toc_open:hover{background:#b3e5fc}.toc[data-open=true] .toc_close{opacity:1}.toc[data-open=true] .toc_open{opacity:0!important;pointer-events:none}.toc[data-open=false] .toc_close{opacity:0;pointer-events:none}.toc[data-open=false] .toc_open{opacity:1}.toc .toc_list{flex-grow:1;overflow-y:auto}.toc .toc_list .toc_link{display:block;padding:10px 20px;text-decoration:none;font-size:.9rem}.toc .toc_list .toc_link:hover{background:#b3e5fc}.toc .toc_list .toc_link[data-level="1"]{padding-left:20px}.toc .toc_list .toc_link[data-level="2"]{padding-left:30px}.toc .toc_list .toc_link[data-level="3"]{padding-left:40px}.toc .toc_list .toc_link[data-level="4"]{padding-left:50px}